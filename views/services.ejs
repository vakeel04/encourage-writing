<section class="lg:px-14 px-4 lg:py-[80px] py-7">
  <div class="lg:w-[48%] text-center lg:text-left">
    <h2 class="lg:text-[40px] text-[20px] font-semibold"><%= data?.process?.heading  %></h2>
    <p class="lg:text-[18px] text-[12px] font-medium"><%= data?.process?.subHeading %></p>
  </div>

  <div class="grid lg:grid-cols-2 lg:gap-14 gap-5 mt-7">
    <div class="col-span-1">
      <% data?.process?.details?.forEach((step, index) => { %>
      <div class="flex gap-3 items-center mt-<%= index === 0 ? '0' : '10' %>">
        <div class="lg:min-w-[62px] min-w-[50px] <%= index != data?.process?.details?.length-1 ? "nextStep" : " "; %> h-[50px] lg:h-[62px] rounded-full bg-black flex justify-center items-center">
          <img src="/<%= step.icon %>" alt="" class="lg:w-[32px] w-[27px]" style=" filter: invert(1)">
        </div>

        <div>
          <h3 class="lg:text-[18px] text-[15px] font-medium"><%= (index + 1) %>. <%= step.title %></h3>
          <p class="text-[#666666] lg:text-[15px] text-[12px] font-medium"><%= step.description %></p>
        </div>
      </div>
      <% }) %>
    </div>

    <div class="col-span-1">
      <img class="w-full lg:h-[440px] h-[300px] object-cover rounded-[8px] lg:rounded-[30px]" src="/<%= data?.process?.bgImg %>" alt="Blog Writing Process">
    </div>
  </div>
</section>

<section class="lg:py-14 py-8">
  <div class="text-center">
    <h2 class="lg:text-[40px] text-[20px] font-bold lg:mt-0 mt-2">
      What our Customers say
    </h2>
  </div>

  <div class="lg:pl-12 pl-4 pr-2 relative">

    <!-- Custom Navigation -->
    <div class="hidden lg:block">
      <div class="swiper-button-next absolute !text-black !-top-8 !right-5">
        <i class="fa-solid fa-arrow-right text-2xl"></i>
      </div>
      <div class="swiper-button-prev absolute !text-black !-top-8 !left-10">
        <i class="fa-solid fa-arrow-left text-2xl"></i>
      </div>
    </div>

    <!-- Swiper Container -->
    <div id="reviewSwiper" class="swiper mySwiper lg:mt-10 mt-6">
      <div class="swiper-wrapper">

        <% data?.customer.forEach((review) => { %>
        <div class="swiper-slide col-span-1 border-[#DCDCDC] border px-6 py-7 rounded-2xl">
          <div class="flex justify-between items-center">
            <div class="flex gap-3 items-center">
              <img class="h-[50px] pt-2 w-[50px] bg-[#E1E1E1] rounded-full object-cover" src="<%= review.image %>" alt="<%= review.name %>">
              <div>
                <h3 class="text-[14px] font-medium"><%= review.name %></h3>
                <h3 class="text-[13px] font-medium"><%= review.desination %></h3>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <i class="fa-solid fa-star text-yellow-400"></i>
              <p class="font-medium lg:text-[16px] text-[13px]"><%= review.rating %>/5</p>
            </div>
          </div>

          <p class="text-[#00000066] font-medium text-[13px] mt-5">
            <%= review.content %>
          </p>
        </div>
        <% }) %>

      </div>
    </div>
  </div>
</section>



<section class="lg:py-14 px-4 lg:px-0 py-10 bg-[#F0F0F0] text-center lg:mt-20 mt-12">
  <h2 class="font-semibold lg:text-[38px] text-[22px] lg:w-[60%] mx-auto lg:leading-[45px]"><%= data?.bottom?.title  %></h2>

  <p class="font-medium lg:text-[17px] text-[14px]"><%= data?.bottom?.subTitle  %></p>

  <a href="#" class="bg-black rounded-md py-2 px-8 text-white font-medium inline-block lg:mt-5 mt-3 text-[14px] lg:text-[16px]">Hire Us Today</a>
</section>

<%-include('partials/footer')%>


<script src=" https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js">
</script>
<script>
  const swiper = new Swiper('.auto-swiper', {
    loop: true, // infinite loop
    spaceBetween: 20,
    autoplay: {
      delay: 2000, // 2 sec per slide
    },
    slidesPerView: 3.8, // ek time par 3 images dikhe
    slidesPerGroup: 1, // ek slide me 1 hi image move ho
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },

  });
</script>

<script>
  const swiper2 = new Swiper('.auto-swiper2', {
    loop: true,
    spaceBetween: 20,

    autoplay: {
      delay: 2000,
      reverseDirection: true
    },
    slidesPerView: 3.4,
    slidesPerGroup: 1,
  });
</script>

<script>
  const swiper3 = new Swiper('.auto-swiper3', {
    loop: true,
    spaceBetween: 20,
    autoplay: {
      delay: 2000,
    },
    slidesPerView: 3.6,
    slidesPerGroup: 1,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },

  });
</script>
<script>
  new Swiper("#reviewSwiper", {
    slidesPerView: 1, // default (mobile)
    spaceBetween: 20,
    loop: true,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    breakpoints: {
      640: { // tablet
        slidesPerView: 1,
        spaceBetween: 20,
      },
      768: { // medium devices
        slidesPerView: 2,
        spaceBetween: 25,
      },
      1024: { // desktop
        slidesPerView: 3,
        spaceBetween: 30,
      },
    },
  });
</script>
<script>
  const processSwiper = new Swiper('#process-slider', {
    loop: true,
    slidesPerView: 3, // ek time par 3 cards
    spaceBetween: 20,
    slidesPerGroup: 1,
    navigation: {
      nextEl: '.next-process',
      prevEl: '.prev-process',
    },
    breakpoints: {
      0: {
        slidesPerView: 1.3
      }, // Mobile
      768: {
        slidesPerView: 2
      }, // Tablet
      1024: {
        slidesPerView: 3.8
      } // Desktop
    }
  });
</script>